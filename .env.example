# ============================================================================
# 한국투자증권 자동트레이딩 시스템 환경 변수 설정 파일
# ============================================================================
#
# 사용 방법:
# 1. 이 파일을 .env 로 복사: cp .env.example .env
# 2. 아래 값들을 실제 정보로 변경
# 3. .env 파일은 절대 Git에 커밋하지 말 것!
#
# ============================================================================

# ----------------------------------------------------------------------------
# 1. 한국투자증권 OpenAPI 설정
# ----------------------------------------------------------------------------

# 실전투자 앱키/앱시크리트
# 발급 방법: https://apiportal.koreainvestment.com/ 에서 신청
KIS_REAL_APP_KEY=YOUR_REAL_APP_KEY_HERE
KIS_REAL_APP_SECRET=YOUR_REAL_APP_SECRET_HERE

# 모의투자 앱키/앱시크리트
# 발급 방법: https://apiportal.koreainvestment.com/ 에서 신청
KIS_PAPER_APP_KEY=YOUR_PAPER_APP_KEY_HERE
KIS_PAPER_APP_SECRET=YOUR_PAPER_APP_SECRET_HERE

# 계좌 정보
# 실전투자 계좌번호 (8자리)
KIS_REAL_ACCOUNT=12345678
# 모의투자 계좌번호 (8자리)
KIS_PAPER_ACCOUNT=12345678
# 계좌상품코드 (2자리) - 01: 주식투자, 03: 선물옵션 등
KIS_ACCOUNT_PRODUCT=01

# HTS ID (efriend Plus 로그인 ID)
KIS_HTS_ID=your_hts_id

# User Agent (선택사항)
KIS_USER_AGENT=MyTradingBot/1.0

# ----------------------------------------------------------------------------
# 2. 텔레그램 봇 설정
# ----------------------------------------------------------------------------

# 텔레그램 봇 토큰
# 발급 방법: 텔레그램에서 @BotFather 검색 → /newbot 명령
# 예시: 1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_BOT_TOKEN=

# 텔레그램 채팅 ID
# 확인 방법: 텔레그램에서 @userinfobot 검색 → 봇과 대화 시작
# 예시: 123456789
TELEGRAM_CHAT_ID=

# 텔레그램 알림 활성화 여부 (true/false)
TELEGRAM_ENABLED=false

# ----------------------------------------------------------------------------
# 3. 시스템 운영 설정
# ----------------------------------------------------------------------------

# 환경 모드 (real: 실전투자, demo: 모의투자)
ENV_MODE=demo

# 계좌상품코드
PRODUCT_CODE=01

# ----------------------------------------------------------------------------
# 4. 매매 전략 설정
# ----------------------------------------------------------------------------

# 조건검색식 이름 (비워두면 첫번째 조건 사용)
CONDITION_NAME=

# 조건검색식 seq (비워두면 자동 조회)
CONDITION_SEQ=

# 최대 보유 종목 수
MAX_STOCKS=5

# 종목당 매수 금액 (원)
BUY_AMOUNT=100000

# 목표 수익률 (%)
TARGET_PROFIT_RATE=2.0

# 손절률 (%)
STOP_LOSS_RATE=-1.5

# 시장 구분 (J: 코스피, Q: 코스닥)
MARKET_DIV=J

# 주문구분 - 매수 (01: 시장가)
ORDER_DVSN_BUY=01

# 주문구분 - 매도 (01: 시장가)
ORDER_DVSN_SELL=01

# ----------------------------------------------------------------------------
# 5. 시스템 운영 주기 설정
# ----------------------------------------------------------------------------

# 잔고 조회 주기 (초)
BALANCE_CHECK_INTERVAL=30

# 조건검색 재실행 주기 (초)
CONDITION_CHECK_INTERVAL=60

# ----------------------------------------------------------------------------
# 6. 거래 시간 설정
# ----------------------------------------------------------------------------

# 장 시작 시간 (HH:MM:SS)
MARKET_START_TIME=09:00:00

# 장 마감 시간 (HH:MM:SS)
MARKET_END_TIME=15:30:00

# ----------------------------------------------------------------------------
# 7. 테스트 시스템 설정 (test_condition_monitor.py)
# ----------------------------------------------------------------------------

# 조건검색 모니터링 주기 (초)
MONITOR_CHECK_INTERVAL=10

# 가격 변화 추적 여부 (true/false)
MONITOR_TRACK_PRICE_CHANGE=true

# 새 종목만 알림 (true/false)
MONITOR_ALERT_NEW_ONLY=true

# ============================================================================
# 보안 주의사항
# ============================================================================
#
# 1. .env 파일은 절대 Git에 커밋하지 말 것!
# 2. .gitignore에 .env 추가 필수
# 3. API 키와 시크릿은 외부에 노출되지 않도록 주의
# 4. 텔레그램 봇 토큰도 민감 정보이므로 주의
# 5. 계좌번호 등 개인정보 보호 필수
#
# ============================================================================
